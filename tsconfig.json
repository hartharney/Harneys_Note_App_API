{
    "compilerOptions": {
    "rootDir": "./src",
    "outDir": "dist",
    "target": "ES6",   
    "module": "CommonJS", 
    "moduleResolution": "node",
    "esModuleInterop": true,
    "types": ["node"],
   "noImplicitAny": true,
   "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "include": ["src/**/*.ts", "src/config/mailgun.ts", "src/**/*.d.ts"],
  "exclude": ["node_modules", "/dist"]
}
